<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_movie_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jasonbutwell.popularmovies.MovieDetails">

    <TextView
        android:id="@+id/movieTitle"
        android:text="Movie title here"
        android:textSize="22sp"
        android:padding="18dp"
        android:textColor="#eeeeee"
        android:background="#00bc12"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="normal|bold" />

    <ImageView
        android:id="@+id/moviePoster"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_width="110dp"
        android:layout_height="150dp"
        android:layout_below="@+id/movieTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/movieReleaseDate"
        android:text="2015"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="24sp"
        android:layout_alignTop="@+id/moviePoster"
        android:layout_toRightOf="@+id/moviePoster"
        android:layout_toEndOf="@+id/moviePoster"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp" />

    <TextView
        android:id="@+id/movieDuration"
        android:text="120 mins"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movieReleaseDate"
        android:layout_alignLeft="@+id/movieReleaseDate"
        android:layout_alignStart="@+id/movieReleaseDate" />

    <TextView
        android:id="@+id/movieRating"
        android:text="8.1 / 10"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movieDuration"
        android:layout_alignLeft="@+id/movieDuration"
        android:layout_alignStart="@+id/movieDuration"
        android:layout_marginTop="14dp" />

    <TextView
        android:id="@+id/movieDescription"
        android:text="This is where the description for the movie will go. Blah, Blah blah. Here is some more text here."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/moviePoster"
        android:layout_alignLeft="@+id/moviePoster"
        android:layout_alignStart="@+id/moviePoster" />
</RelativeLayout>
